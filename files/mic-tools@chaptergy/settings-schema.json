{
  "layout": {
    "type": "layout",
    "pages": ["panel-settings"],

    "panel-settings": {
      "type": "page",
      "title": "Settings",
      "sections": [
        "general-section",
        "keybind-section"
      ]
    },

    "general-section": {
      "type": "section",
      "title": "General",
      "keys": [
        "autoListen",
        "lightIcons"
      ]
    },  
    "keybind-section": {
      "type": "section",
      "title": "Key Bindings",
      "keys": [
        "keyMute",
        "keyListen"
      ]
    }
  },
  "lightIcons": {
    "type": "checkbox",
    "default": false,
    "description": "Use light icons"
  },
  "autoListen": {
    "type": "checkbox",
    "default": true,
    "description": "Automatically listen to the microphone when it is used"
  },
  
  "keyMute": {
    "type": "keybinding",
    "description": "Mute / Unmute",
    "default": ""
  },
  
  "keyListen": {
    "type": "keybinding",
    "description": "Enable / Disable listening to the microphone",
    "default": ""
  }
}
